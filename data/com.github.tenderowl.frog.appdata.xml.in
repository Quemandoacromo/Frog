<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>com.github.tenderowl.frog</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>MIT</project_license>
    <name>Frog</name>
    <summary>Extract text from anywhere, even QR code</summary>
    <description>
        <p>Quickly extract text from any source such as images, websites, even video - everywhere you can grab an image
            shot. Even if it is encoded in a QR code!</p>
    </description>

    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/tenderowl/frog/master/data/screenshots/frog-window.png</image>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/tenderowl/frog/master/data/screenshots/frog-config.png</image>
        </screenshot>
    </screenshots>

    <releases>
        <release version="1.0.0" type="stable" date="2022-04-18">
            <description>
                <p>What's new:</p>
                <ul>
                    <li>Updated UI</li>
                    <li>Drag-n-drop support. For images only</li>
                    <li>Dark mode support</li>
                    <li>Localized interface</li>
                </ul>
            </description>
        </release>
        <release version="0.3.0" type="stable" date="2022-03-21">
            <description>
                <p>Frog now is available on the Flathub and use modern Portal implementation.
                We also updated the UI accordingly to the GNOME HIG and fixed some bugs we've found :)</p>
            </description>
        </release>
        <release version="0.2.1" date="2021-12-11">
            <description>
                <p>Now you're free to run Frog with `-e` option to extract text and instantly copy it to the clipboard.</p>
            </description>
        </release>
        <release version="0.2.0" timestamp="1639071856">
            <description>
                <p>What's new:</p>
                <ul>
                    <li>English model included with Frog itself</li>
                    <li>QR code detection. If one in the selected area - it will be decoded.</li>
                    <li>New command line shortcut to run with "Extract to clipboard" feature.</li>
                    <li>Granite.HyperTextView to support QR encoded links</li>
                </ul>
            </description>
        </release>
        <release version="0.1.7" timestamp="1632324626" date="2021-09-22">
            <description>
                <p>Fix language packs download.</p>
            </description>
        </release>
        <release version="0.1.6" timestamp="1631035973" date="2021-09-07">
            <description>
                <p>Dark mode+</p>
                <ul>
                    <li>Dark mode support.</li>
                    <li>Application will hide the main window for the cleaner shots. #11</li>
                </ul>
            </description>
        </release>
        <release version="0.1.5" timestamp="1630132049" date="2021-08-28">
            <description>
                <p>Quickly extract any text from anywhere you need it: webpages, videos, photos, etc.</p>
            </description>
        </release>
    </releases>

    <developer_name>Tender Owl</developer_name>
