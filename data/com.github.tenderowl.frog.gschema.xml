<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="frog">
  <schema id="com.github.tenderowl.frog" path="/com/github/tenderowl/frog/">
    <!-- Window params -->
    <key name="window-width" type="i">
      <default>-1</default>
      <summary>Default window width</summary>
    </key>
    <key name="window-height" type="i">
      <default>-1</default>
      <summary>Default window height</summary>
    </key>

    <key name="extra-language" type="s">
      <default>"eng"</default>
      <summary>Extra language</summary>
      <description>Language to detect alongside with the active one.</description>
    </key>
    <key name="active-language" type="s">
      <default>"eng"</default>
      <summary>Active language</summary>
      <description>Active language to extract the text.</description>
    </key>
    <key name="autocopy" type="b">
      <default>false</default>
      <summary>Autocopy text to clipboard</summary>
      <description>Automatically copy the extracted text to the clipboard.</description>
    </key>
    <key name="autolinks" type="b">
      <default>false</default>
      <summary>Open QR-code links</summary>
      <description>Automatically open links from QR-codes</description>
    </key>
  </schema>
</schemalist>
